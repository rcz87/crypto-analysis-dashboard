# ===============================
# Environment Variables Template
# Copy this file to .env and fill in your actual values
# ===============================

# ===============================
# Runtime
# ===============================
# App port (default 5000). Biarkan kosong untuk default.
PORT=5000
# Base URL publik untuk OpenAPI/Actions GPTs (ganti di VPS)
PUBLIC_BASE_URL=http://localhost:5000

FLASK_ENV=production
SESSION_SECRET=your-super-secret-session-key-here

# ===============================
# Database (LOCAL)
# Untuk pengembangan lokal (tanpa Docker)
# ===============================
DATABASE_URL=postgresql://trading_user:your_password@localhost:5432/trading_db
DB_PASSWORD=your_database_password

# ===============================
# Database (VPS / Docker Compose)
# POSTGRES_PASSWORD dibaca oleh docker-compose untuk service postgres
# DATABASE_URL di dalam kontainer app akan menunjuk ke hostname "postgres"
# ===============================
POSTGRES_PASSWORD=replace-with-strong-password

# (Opsional) Jika Anda ingin juga set dari luar kontainer:
# DATABASE_URL=postgresql://crypto_user:${POSTGRES_PASSWORD}@postgres:5432/crypto_trading

# ===============================
# API Keys - Trading
# ===============================
OKX_API_KEY=your-okx-api-key
OKX_SECRET_KEY=your-okx-secret-key
OKX_PASSPHRASE=your-okx-passphrase

# ===============================
# API Keys - AI Services
# ===============================
OPENAI_API_KEY=your-openai-api-key

# ===============================
# Security for Protected Endpoints (Opsional tapi disarankan)
# Digunakan untuk header x-api-key pada endpoint yang dilindungi
# ===============================
API_MASTER_KEY=your-master-api-key

# ===============================
# Monitoring & Error Tracking (Opsional)
# ===============================
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=production
PROMETHEUS_PORT=9090

# ===============================
# Redis (Opsional)
# ===============================
REDIS_URL=redis://localhost:6379/0

# ===============================
# Email (Opsional)
# ===============================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ===============================
# Telegram Bot (Opsional, tapi diperlukan jika kirim notifikasi)
# ===============================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id