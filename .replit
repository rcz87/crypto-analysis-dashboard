modules = ["nodejs-20", "web", "bash", "python-3.11", "postgresql-16"]
run = "node index.js"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libev", "libxcrypt", "nano", "opensshWithKerberos", "openssl", "postgresql"]

[deployment]
deploymentTarget = "gce"
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:$PORT wsgi_production:application --workers 2 --worker-class gevent"]
build = ["sh", "-c", "pip install -r requirements-prod.txt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GPTs API Server"

[[workflows.workflow]]
name = "GPTs API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 8080
externalPort = 8080

[agent]
expertMode = true
